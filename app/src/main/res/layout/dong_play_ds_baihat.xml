<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp">
    <TextView
        android:text="1"
        android:id="@+id/text_view_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/img_play_bai_hat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/text_view_index"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/text_view_play_tenbaihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="tenbaihat"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_play_bai_hat"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/text_view_play_casi_baihat"
        app:layout_constraintStart_toEndOf="@id/img_play_bai_hat"
        app:layout_constraintTop_toBottomOf="@id/text_view_play_tenbaihat"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="ten ca si"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>