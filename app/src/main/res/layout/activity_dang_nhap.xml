<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background_login"
    tools:context=".Activity.DangNhapActivity">
    <TextView
        android:id="@+id/text_view_dangnhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edit_text_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_border"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:hint="Tên đăng nhập"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@id/text_view_dangnhap"
        app:layout_constraintEnd_toEndOf="@id/text_view_dangnhap"
        app:layout_constraintTop_toBottomOf="@id/text_view_dangnhap"/>
    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_border"
        android:hint="Mật khẩu"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@id/edit_text_username"
        app:layout_constraintEnd_toEndOf="@id/edit_text_username"
        app:layout_constraintTop_toBottomOf="@id/edit_text_username"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:background="@drawable/custom_button"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@id/edit_text_password"
        app:layout_constraintEnd_toEndOf="@id/edit_text_password"
        app:layout_constraintTop_toBottomOf="@id/edit_text_password"/>

</androidx.constraintlayout.widget.ConstraintLayout>