<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_color">
    <TextView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MORE"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/sleeptimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Sleep timer"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/more"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="None"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/sleeptimer"
        app:layout_constraintBottom_toBottomOf="@id/sleeptimer"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/Language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Language"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sleeptimer"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TV"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/Language"
        app:layout_constraintBottom_toBottomOf="@id/Language"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/Country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Country"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Language"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HN"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/Country"
        app:layout_constraintBottom_toBottomOf="@id/Country"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/musiccolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Music Player Color"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Country"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/musiccolor"
        app:layout_constraintBottom_toBottomOf="@id/musiccolor"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Update"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/musiccolor"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.0"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/update"
        app:layout_constraintBottom_toBottomOf="@id/update"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Premium for 999$"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>