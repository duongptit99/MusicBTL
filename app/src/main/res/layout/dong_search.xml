<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_search_baihat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/text_search_tenbaihat"
        android:textSize="13sp"
        android:text="Ten bai hat"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/img_search_baihat"
        app:layout_constraintTop_toTopOf="@id/img_search_baihat"
        app:layout_constraintBottom_toBottomOf="@id/img_search_baihat"/>
    <TextView
        android:id="@+id/text_search_casi"
        android:textSize="10sp"
        android:text="Ten bai hat"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_search_tenbaihat"
        app:layout_constraintStart_toStartOf="@id/text_search_tenbaihat"
        app:layout_constraintEnd_toEndOf="@id/text_search_tenbaihat"/>
</androidx.constraintlayout.widget.ConstraintLayout>